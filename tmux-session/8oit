#!/bin/sh
tmux new-session -d -s "oit 8" -n root
tmux split-window -v
tmux new-window -t oit:1 -n modules
tmux new-window -t oit:2 -n themes
tmux split-window -v -p 20

tmux send-keys -t oit:0.0 "cd /web/8oit;vagrant up;vagrant ssh" C-m
tmux send-keys -t oit:0.1 "cd /web/8oit;git status" C-m
tmux send-keys -t oit:1 "cd /web/8oit/drupal-site-files/zap/modules; ls" C-m
tmux send-keys -t oit:2.0 "cd /web/8oit/drupal-site-files/zap/themes/ant/sass;ls" C-m
tmux send-keys -t oit:2.1 "cd /web/8oit/drupal-site-files/zap/themes/ant;cat package.json" C-m

tmux select-window -t oit:0
tmux -2 attach-session -d
